<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/violent"
    tools:context=".MainActivity">
    <!-- Задаём некоторые свойства для надписи -->
    <TextView
        android:id="@+id/txtComment"
        android:layout_width="213dp"
        android:layout_height="86dp"
        android:gravity="center"
        android:text="Сгенерировать случайное число от 0 до:"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39" />
    <!-- Задаём некоторые свойства для скрытой надписи -->
    <TextView
        android:id="@+id/txtGeneratedNumber"
        android:layout_width="213dp"
        android:layout_height="86dp"
        android:gravity="center"
        android:text="число"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        app:layout_constraintVertical_bias="0.55" />
    <!-- Задаём некоторые свойства поля ввода -->
    <EditText
        android:id="@+id/editInput"
        android:layout_width="195dp"
        android:layout_height="59dp"
        android:gravity="center"
        android:textSize="24dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.544" />
    <!-- Задаём некоторые свойства для кнопки -->
    <ImageView
        android:id="@+id/btnGenerate"
        android:layout_width="114dp"
        android:layout_height="118dp"
        android:gravity="center"
        android:onClick="onClickButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.704"
        app:srcCompat="@drawable/play" />

</androidx.constraintlayout.widget.ConstraintLayout>